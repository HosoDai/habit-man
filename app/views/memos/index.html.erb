<% provide(:title, "Memos index") %>


<div class="row">
  <div class="col-md-2">
    <%= render "groups/sidebar" %>
  </div>
  <div class="col-md-10">

    <!-- Button trigger modal -->
    <div class="text-right">
      <button type="button" id="exampleButton" class="btn btn-success" data-toggle="modal" data-target="#exampleModal">
        new memo
      </button>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">memo create form</h5>
            <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
          </div>
          <%= form_with(model: [@group, @memo]) do |f| %>
            <div class="modal-body">
              <%= render "shared/error_messages", object: f.object %>

              <%= f.label :attendance_status %>
              <%= f.select :attendance_status, Memo.attendance_statuses.keys.to_a, {}, class: "form-control" %>

              <%= f.label :description %>
              <%= f.text_field :description, class: "form-control" %>

              <%= f.hidden_field :memo_date, :value => @date, class: "form-control" %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <%= f.submit "Submit", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>


    <h1 class="h3 mb-3 fw-normal"><%= @date %> memos</h1>
    <table class="table">
      <thead>
        <tr>
          <th>memo title</th>
          <th>memo description</th>
          <th>memo user</th>
        </tr>
      </thead>
      <tbody>
        <% @memos.each do |memo| %>
          <tr>
            <td>#</td>
            <td><%= memo.description %></td>
            <td><%= memo.user.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


