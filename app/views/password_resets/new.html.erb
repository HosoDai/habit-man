<% provide(:title, "Forgot password") %>


<div class="row d-flex justify-content-center align-items-center h-100 mt-5">
  <div class="col-md-6 col-md-offset-3">
    <div class="card text-center">
      <div class="card-body px-5">
          <h1><i class="fa-solid fa-lock"></i></h1>
          <h2>Forgot Password?</h2>
          <p class="card-text py-2">
              You can reset your password here.
          </p>
          <%= form_with(url: password_resets_path, scope: :password_reset) do |f| %>
            <div class="form-outline flex-fill mb-0 form-floating mb-3">
              <%= f.email_field :email, class: "form-control", id: "password_reset_email", placeholder: "name@example.com" %>
              <%= f.label(:email, "Email address") %>
            </div>

            <%= f.submit "Submit", class: "btn btn-primary" %>
          <% end %>
      </div>
    </div>
  </div>
</div>



