<% provide(:title, "members") %>

<div class="row">
  <!-- Sidebar -->
  <div class="col-md-2">
    <%= render "groups/sidebar" %>
  </div>

  <!-- Page content -->
  <div class="col-md-10" style="padding-top: 20px">
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Inviting member form</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <%= form_with(url: group_invite_path(@group), scope: :group) do |f| %>
            <div class="modal-body">
              <%= f.label :email %>
              <%= f.email_field :email, class: "form-control" %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <%= f.submit "Invite User", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="d-flex">
      <h1 class="h3 mb-3 fw-normal">Members</h1>
      <!-- Button trigger modal -->
      <% if current_user.id == @group.owner_id %>
        <button type="button" class="btn btn-primary ms-auto" data-bs-toggle="modal" data-bs-target="#exampleModal">
          Invite Member
        </button>
      <% end %>
    </div>

    <!-- member table -->
    <table class="table">
      <thead>
        <tr>
          <th>member image</th>
          <th>member name</th>
          <th>member status</th>
        </tr>
      </thead>
      <tbody>
        <% @members.each do |member| %>
          <tr>
            <td><%= gravatar_for member %></td>
            <td><%= member.name %></td>
            <td>
              <% if member.id != @group.owner_id %>
                member
              <% else %>
                owner
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>

