<% provide(:title, @group.name) %>

<div id="groupContainer" class="groupPage" style="margin-top: 51px;">
  <!-- Sidebar -->
  <div id="groupAside">
    <%= render "groups/sidebar" %>
  </div>

  <!-- Main -->
  <div id="main" class="groupPage" style="padding-left: 320px;">
    <div class="unitContent">
      <div class="tag-search-form">
        <%= render "layouts/tag_search" %>
      </div>
      <% @memos.each do |memo| %>
        <div class="content">
          <div class="boxBalloon">
            <div class="feedSection">
              <div class="header">
                <div class="left-content">
                  <div class="user-icon">
                    <%= gravatar_for memo.user %>
                  </div>
                  <div class="feed-info">
                    <div>
                      <b><%= memo.user.name %></b>
                    </div>
                    <div class="feed-date">
                      <%= memo.created_at.strftime('%Y/%m/%d %H:%M') %>
                    </div>
                  </div>
                </div>
              </div>
              <div class="body">
                <b><%= memo.title %></b><br>
                <p style="text-overflow: ellipsis; white-space: nowrap; overflow: hidden;"><%= memo.description %></p>
              </div>
            </div>
            <div class="boxFeedFooter">
              <div class="tag-list">
                <%= render "memos/tag_list", tag_list: memo.tag_list %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
    </div>
  </div>
</div>



