<% provide(:title, "group edit") %>

<div class="row" id="wrapper">
  <!-- Sidebar -->
  <div class="col-md-2">
    <%= render "groups/sidebar" %>
  </div>
  <!-- Page content wrapper-->
  <div id="page-content-wrapper" class="container-fluid col-md-10" style="background-color: #2779e2;">
      <!-- Page content-->
      <div class="container-fluid">
        <h1 class="text-white mb-4">Update group profile</h1>

        <div class="card" style="border-radius: 15px;">
          <div class="card-body">

            <%= form_with(model: @group) do |f| %>
              <%= render "shared/error_messages", object: f.object %>

              <div class="row align-items-center pt-4 pb-3">
                <div class="col-md-3 ps-5">
                  <%= f.label(:name, "group name", class: "mb-0") %>
                </div>
                <div class="col-md-9 pe-5">
                  <%= f.text_field :name, class: "form-control form-control-lg" %>
                </div>
              </div>

              <hr class="mx-n3">

              <div class="row align-items-center pt-4 pb-3">
                <div class="col-md-3 ps-5">
                  <%= f.label(:image, "group image", class: "mb-0") %>
                </div>
                <div class="col-md-9 pe-5">
                  <%= f.file_field :image, class: "form-control form-control-lg", accept: "image/*" %>
                </div>
              </div>

              <hr class="mx-n3">

              <div class="px-5 py-4">
                <%= f.submit "Save changes", class: "btn btn-primary btn-lg" %>
              </div>
            <% end %>

          </div>
        </div>
      </div>
  </div>
</div>
